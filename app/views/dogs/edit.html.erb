<h1><%="#{@dog.name}'s Page"%></h1>

<% if flash[:messages] %>
<h2><%= flash[:messages] %></h2>
<% end %>

<p>---------------------------------</p>
<p><%= form_for @dog do |f| %></p>
<p><b>Name</b></p>
<p><%= f.text_field :name %></p>
<p><b>Breed</b></p>
<p><%= f.text_field :breed %></p>
<p><b>Age</b></p>
<p><%= f.text_field :age %></p>
<p><%= f.submit :submit %></p>
<% end %>
<p>---------------------------------</p>
</br>
<%= link_to "Back to #{@dog.name}'s Page", dog_path(@dog) %>
</br>
<%= link_to "All dogs", dogs_path %>