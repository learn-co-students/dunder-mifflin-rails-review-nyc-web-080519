<h1><%= "Edit #{@employee.first_name} #{@employee.last_name}" %></h1>

<%= form_for @employee do |f| %>
  <%= f.label :first_name %><br>
  <%= f.text_field :first_name, :required => true  %><br>
  <%= f.label :last_name %><br>
  <%= f.text_field :last_name %><br>
  <%= f.label :alias %><br>
  <%= f.text_field :alias %><br>
  <%= f.label :title %><br>
  <%= f.text_field :title %><br>
  <%= f.label :office %><br>
  <%= f.text_field :office %><br>
  <%= f.label :img_url %><br>
  <%= f.text_field :img_url %><br>
  <%= f.label :dog %><br>
  <%= f.collection_select :dog_id, @dogs, :id, :name  %><br>
  <%= f.submit "Edit the employee" %>
<% end %>