<h1> Create an Employee </h1>

<ul>
<%if flash[:messages]%>
Errors: 
<%flash[:messages].each do |message|%>
    <li><%=message%></li>
<%end%>
<%end%>
</ul>

<%= form_for @employee do |f| %>
    <%= f.label 'First Name' %><br>
    <%= f.text_field :first_name %><br>
   
    <%= f.label 'Last Name' %><br>
    <%= f.text_field :last_name%><br>

    <%= f.label 'Alias' %><br>
    <%= f.text_field :alias %><br>
   
    <%= f.label 'Title' %><br>
    <%= f.text_field :title %><br>

    <%= f.label 'Office' %><br>
    <%= f.text_field :office %><br>

    <%= f.collection_select :dog_id, @dogs, :id, :name, prompt: true %>

    <%= f.submit "Create Employee" %>
  <% end %>