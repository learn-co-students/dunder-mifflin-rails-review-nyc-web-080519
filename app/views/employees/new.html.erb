<h1>Create New Employee</h1>

<% if flash[:messages] %>
    <h2><%= flash[:messages] %></h2>
<% end %>

<%= form_for @employee do |f| %>
    First Name:
    <%= f.text_field :first_name %><br><br>
    Last Name:
    <%= f.text_field :last_name %><br><br>
    Alias:
    <%= f.text_field :alias %><br><br>
    Title:
    <%= f.text_field :title %><br><br>
    Office:
    <%= f.text_field :office %><br><br>
    Image URL:
    <%= f.text_field :img_url %><br><br>
    Dog:
    <%= f.collection_select :dog_id, @dogs, :id, :name, prompt: "Select a dog" %><br><br>
    <%= f.submit :'Create Employee' %>
<% end %>